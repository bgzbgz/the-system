# ===========================================
# BOSS OFFICE BACKEND - ENVIRONMENT VARIABLES
# ===========================================
# Copy this file to .env and fill in your values

# Server
PORT=3000
NODE_ENV=development

# ===========================================
# AI PROVIDERS
# ===========================================

# Anthropic (Claude) - Primary AI for tool building
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# Google Gemini - Secondary AI for QA
GEMINI_API_KEY=your-gemini-key-here

# ===========================================
# DATABASE
# ===========================================

# MongoDB Atlas
MONGODB_URI=mongodb+srv://user:password@cluster.mongodb.net/?appName=YourApp
MONGODB_DB_NAME=fast_track_tools_v4

# ===========================================
# GITHUB (for tool deployment)
# ===========================================

GITHUB_TOKEN=ghp_your-github-token
GITHUB_OWNER=your-github-username
GITHUB_REPO=your-tools-repo
GITHUB_BRANCH=main

# ===========================================
# SECURITY
# ===========================================

# Generate with: openssl rand -hex 32
JWT_SECRET=your-jwt-secret-here
CALLBACK_SECRET=your-callback-secret-here

# ===========================================
# LEARNWORLDS (Optional)
# ===========================================

# LW_CLIENT_ID=
# LW_API_KEY=
# LW_WEBHOOK_SECRET=
# LW_SCHOOL_URL=https://your-school.learnworlds.com

# ===========================================
# TOOL DEPLOYMENT
# ===========================================

TOOLS_BASE_URL=https://your-username.github.io/your-tools-repo
